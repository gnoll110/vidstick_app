= simple_form_for @medium, html: { multipart: true } do |f|
  - if @medium.errors.any?
    #errors
      %p
        = @medium.errors.count
        Prevented this medium froms saving
      %ul
        - @medium.errors.full_messages.each do |msg|
          %li= msg
  .panel-body
    = f.input :filename, input_html: { class: 'form-control' }
    = f.input :modified_filename, input_html: { class: 'form-control' }

    .row
      .col-md-6
        %h3 Destinations
        #relations
          = f.simple_fields_for :relations do |relation|
            = render 'relation_fields', f: relation
          .links
            = link_to_add_association 'Add Destinations', f, :relations, class: "btn btn-default add-button"
        %section
          %section.video
            %video{:width => 320, :height => 240, :controls => true}
              %source{:src => "http://mpegmedia.abc.net.au/tv/gardeningaus/vodcast/gardeningaus_15_26_17.mp4", :type => 'video/mp4; codecs="avc1.42E01E, mp4a.40.2"'}
        %section
          %section.video
            %video{:width => 320, :height => 240, :controls => true}
              %source{:src => "file:///home/noel/dwhelper/High_Cable_Curl.mp4", :type => 'video/mp4; codecs="avc1.42E01E, mp4a.40.2"'}
        %video{:id => "example_video_1", :class => "video-js vjs-default-skin", :width => "640", :height => "264",
               :src => "file:///home/noel/dwhelper/High_Cable_Curl.mp4", :type => 'video/mp4'}
      .col-md-6
        %p = video_tag(["../../dwhelper/High_Cable_Curl.mp4"], :size => "320x240", :controls => true)
        %p = video_tag(["../../../dwhelper/High_Cable_Curl.mp4"], :size => "320x240", :controls => true)
        = video_tag("/dwhelper/High_Cable_Curl.mp4", :size => "320x240", :controls => true)
        = video_tag(["/home/noel/dwhelper/High_Cable_Curl.mp4"], :size => "320x240", :controls => true)
        = video_tag(["file:///home/noel/dwhelper/High_Cable_Curl.mp4"], :size => "320x240", :controls => true)
        = video_tag(["http://mpegmedia.abc.net.au/tv/gardeningaus/vodcast/gardeningaus_15_26_17.mp4"], :size => "320x240", :controls => true)

  = f.button :submit, class: "btn btn-primary"
